<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h3>Comments</h3>
<%= link_to 'New Comment', new_post_comment_path(@post) %>
<% @post.comments.each do |post| %>
  <p><%= post.body %></p>
<% end %>
