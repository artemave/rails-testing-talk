<div class="content">
  <h1><%= @post.title %></h1>
  <p><%= @post.body %></p>
</div>

<div class="content post-comments-section">
  <h3>Comments</h3>
  <div class="new_commment_form">
    <%= render 'comments/form', comment: @comment, commentable: @post, hide_back_button: true %>
  </div>
  <%= render @post.comments.all %>
</div>
